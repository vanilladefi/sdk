{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "strict": true,
    "rootDir": "src",
    "baseUrl": "src",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "/cjs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "contracts",
    "**/__tests__/*",
    "**/__utils__/*"
  ]
}
